{
  "name": "sample-monorepo-project",
  "version": "0.1.0",
  "private": true,
  "author": "This is the name of your team",
  "description": "This is the description of the project",
  "workspaces": [
    "client",
    "api",
    "infra"
  ],
  "scripts": {
    "clean": "rimraf --glob node_modules '**/node_modules'",
    "install-prod": "pnpm install --prod",
    "preinstall": "node -e \"if (process.env.npm_execpath && !process.env.npm_execpath.includes('pnpm')) { console.error('ERROR: Please use pnpm to install dependencies.'); process.exit(1); }\"",
    "prettier-check": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml,jsx,ts,tsx}\"",
    "prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml,jsx,ts,tsx}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "only-allow": "1.2.1",
    "husky": "9.1.7",
    "lint-staged": "15.2.0",
    "prettier": "3.2.5",
    "rimraf": "6.0.1"
  },
  "lint-staged": {
    "*.{css,html,js,json,md,yaml,yml,jsx,ts,tsx}": [
      "npm run prettify"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
